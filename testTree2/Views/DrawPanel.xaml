<UserControl x:Class="testTree2.Views.DrawPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:testTree2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer x:Name="drawPanel" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas Name="MyCanvas" Background="#FFE5E5E5" ClipToBounds="True" 
                    Width="{Binding Path=myWidth}" 
                    Height="{Binding Path=myHeight}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
